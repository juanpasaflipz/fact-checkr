# --------------------------------------------
# Frontend (Next.js)
# --------------------------------------------
# API base URL the frontend should call (Vercel: set per env)
NEXT_PUBLIC_API_URL=https://fact-checkr-production.up.railway.app
# Optional: Stripe publishable key for client-side checkout
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_example
# Optional: Sentry DSN for browser error reporting
NEXT_PUBLIC_SENTRY_DSN=https://public@sentry.example/1

# --------------------------------------------
# Backend (FastAPI on Railway/Docker)
# --------------------------------------------
# Database connection string (Neon/Postgres)
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
# Redis URL (Removed - using Cloud Tasks)
# REDIS_URL=redis://redis:6379/0

# Cloud Tasks Configuration
GCP_PROJECT_ID=fact-check-mx-934bc
GCP_LOCATION=us-central1
CLOUD_TASKS_QUEUE=factcheckr-tasks
TASKS_TARGET_BASE_URL=https://factcheckr-backend-xyz.a.run.app
TASKS_OIDC_SERVICE_ACCOUNT_EMAIL=factcheckr-sa@...
TASK_SECRET=replace-with-internal-secret
# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://factcheck.mx,https://www.factcheck.mx,http://localhost:3000
# Frontend URL used for redirects (no trailing slash)
FRONTEND_URL=https://factcheck.mx
# JWT signing secret
JWT_SECRET_KEY=replace-with-strong-secret
# Optional: runtime environment label
ENVIRONMENT=production
# Optional: DB pool tuning
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
# Blog and social automation
# Whether to auto publish generated blog posts (true/false)
AUTO_PUBLISH_BLOG=false
# Free tier limit of visible articles (integer, default 3)
BLOG_FREE_TIER_LIMIT=3
# Auto-post published articles to Twitter/X when available (true/false)
AUTO_POST_TO_TWITTER=false

# AI / Integrations (optional but required for related features)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
SERPER_API_KEY=serper-key
YOUTUBE_API_KEY=yt-api-key
FACTICITY_API_KEY=facticity-key
TWITTER_BEARER_TOKEN=twitter-bearer

# Stripe (required for paid plans)
STRIPE_SECRET_KEY=sk_live_or_test
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRO_MONTHLY_PRICE_ID=price_...
STRIPE_PRO_YEARLY_PRICE_ID=price_...
STRIPE_TEAM_MONTHLY_PRICE_ID=price_...
STRIPE_TEAM_YEARLY_PRICE_ID=price_...

# Observability (optional)
SENTRY_DSN=https://secret@sentry.example/1
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=factcheckr

